{% extends 'base.html.twig' %}

{% block content %}
    <div class="container mx-auto px-6 py-8 bg-gray-800 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-center text-white mb-8">Valider la commande</h1>
        
        {{ form_start(form) }}
            <div class="space-y-4">
                <div class="bg-gray-700 p-4 rounded-md">
                    {{ form_row(form.status, {
                        'attr': {
                            'class': 'w-full p-2 rounded-md bg-gray-900 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none'
                        }
                    }) }}
                </div>

                <div class="bg-gray-700 p-4 rounded-md">
                    {{ form_row(form.createdAt, {
                        'attr': {
                            'class': 'w-full p-2 rounded-md bg-gray-900 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none'
                        }
                    }) }}
                </div>

                <div class="bg-gray-700 p-4 rounded-md">
                    {{ form_row(form.shippingAdress, {
                        'attr': {
                            'class': 'w-full p-2 rounded-md bg-gray-900 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none'
                        }
                    }) }}
                </div>

                <div class="bg-gray-700 p-4 rounded-md">
                    {{ form_row(form.paymentMethod, {
                        'attr': {
                            'class': 'w-full p-2 rounded-md bg-gray-900 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none'
                        }
                    }) }}
                </div>
            </div>

            <div class="text-center mt-8">
                <button type="submit" class="bg-blue-600 text-white py-3 px-8 rounded-lg hover:bg-blue-500 transition">Valider la commande</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
