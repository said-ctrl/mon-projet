			<p class="text-lg text-gray-300">Clients satisfaits √† travers le monde</p>
		</div>
	</section>


	<!-- Contact ou Appel √† l'action -->
	<section class=" text-white py-12">
		<div class="container mx-auto text-center">
			<h2 class="text-4xl font-extrabold text-white mb-4">Contactez-moi</h2>
			<p class="text-lg text-gray-300 mb-8">Pour toute demande de renseignements ou de collaboration, n'h√©sitez pas √† me contacter.</p>
			<a href="{{ path('app_service') }}" class="px-8 py-3 text-lg font-semibold bg-orange-500 text-white rounded-full shadow-md transition-all hover:bg-orange-600 transform hover:scale-105 hover:shadow-lg">Me contacter</a>
		</div>
	</section>

	<script>
		const carousel = document.getElementById('carousel');
const prevButton = document.getElementById('prev');
const nextButton = document.getElementById('next');
const slides = document.querySelectorAll('#carousel > div');
const totalSlides = slides.length;
let index = 0;

// Fonction pour mettre √† jour le carrousel
function showSlide() {
const slideWidth = slides[0].clientWidth;
carousel.style.transform = `translateX(-${
index * slideWidth
}px)`;
}

// Fonction pour aller au slide suivant
function goToNextSlide() {
index = (index + 1) % totalSlides;
showSlide();
}

// Fonction pour aller au slide pr√©c√©dent
function goToPrevSlide() {
index = (index - 1 + totalSlides) % totalSlides;
showSlide();
}

// Ajout d'√©v√©nements aux boutons
nextButton.addEventListener('click', goToNextSlide);
prevButton.addEventListener('click', goToPrevSlide);

// D√©filement automatique toutes les 5 secondes
let autoSlide = setInterval(goToNextSlide, 3500);

// Arr√™ter le d√©filement automatique sur survol
const carouselContainer = document.getElementById('carousel');
carouselContainer.addEventListener('mouseover', () => clearInterval(autoSlide));
carouselContainer.addEventListener('mouseout', () => {
autoSlide = setInterval(goToNextSlide, 3500);
});

// Afficher le premier slide
showSlide();
document.getElementById('showFormBtn').addEventListener('click', function() {
        var form = document.getElementById('reviewForm');
        form.classList.toggle('hidden'); // Toggle l'affichage du formulaire
    });
	</script>

{% endblock %}
