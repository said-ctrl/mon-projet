{% extends 'base.html.twig' %}

{% block content %}
<h1>Mes Commandes</h1>

{% if orders|length == 0 %}
<p>Vous n'avez aucune commande.</p>
{% else %}
<table class="table-auto border-collapse border border-gray-400">
    <thead>
        <tr>
            <th class="border border-gray-400 px-4 py-2">Statut</th>
            <th class="border border-gray-400 px-4 py-2">Date</th>
            <th class="border border-gray-400 px-4 py-2">ID Commande</th>
        </tr>
    </thead>
    <tbody>
        {% for order in orders %}
        <tr>
            <td class="border border-gray-400 px-4 py-2">{{ order.status }}</td>
            <td class="border border-gray-400 px-4 py-2">{{ order.createdAt|date('Y-m-d H:i') }}</td>
            <td class="border border-gray-400 px-4 py-2">{{ order.id }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endif %}
{% endblock %}
