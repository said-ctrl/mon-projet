{% extends 'base.html.twig' %}

{% block title %}Demande de Création d'Œuvre - Joffrine Dehais{% endblock %}

{% block content %}
<div class="container mx-auto p-6 mt-12 max-w-lg text-white">
    <h1 class="text-3xl font-bold text-orange-500 mb-6 text-center">Demande de Création d'Œuvre</h1>
    
    {% if app.user %}
        {# L'utilisateur est connecté : afficher le formulaire directement #}
        {% if form is not empty %}
            <div class="alert alert-info mb-6 p-4 bg-blue-100 text-blue-800 rounded-md">
                Remplissez le formulaire ci-dessous pour faire une demande de création d'œuvre sur mesure.
            </div>

            <form method="post" enctype="multipart/form-data" class="space-y-6">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_row(form.nom, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg bg-white text-gray-800 shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.email, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg bg-white text-gray-800 shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.description, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg bg-white text-gray-800 shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.preferences, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg bg-white text-gray-800 shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.type_oeuvre, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border rounded-lg bg-white text-gray-800 shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500'}}) }}
                </div>

                <div class="form-group">
                    <button type="submit" class="w-full py-3 bg-orange-500 text-white rounded-lg font-semibold text-lg hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-opacity-50">
                        Soumettre la demande
                    </button>
                </div>

                {{ form_end(form) }}
            </form>
        {% else %}
            <p>Aucun formulaire à afficher</p>
        {% endif %}
    {% else %}
        {# L'utilisateur n'est pas connecté : afficher un message #}
        <div class="alert alert-warning p-4 bg-yellow-100 text-yellow-800 rounded-md text-center">
            Vous n'êtes pas connecté. Accédez au formulaire après connexion ou attendez l'ouverture des inscriptions. Veuillez vous connecter.
        </div>
        <div class="text-center mt-4">
            <a href="{{ path('app_registration') }}"
               class="px-6 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition duration-200">
                inscriptions
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
