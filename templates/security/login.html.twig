{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
    <div class="container mx-auto p-6 mt-12 text-black">
        <h1 class="text-3xl font-bold text-orange-500 mb-6 text-center">Connectez Vous</h1>
        
        {% if error %}
            <div class="alert alert-danger mb-3">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" class="space-y-6 max-w-lg mx-auto p-6 bg-white shadow-md rounded-lg">
            <div class="form-group mb-4">
                <label for="username" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="mt-1 block w-full px-4 py-2 border rounded-lg bg-white text-gray-800 shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500" autocomplete="email" required autofocus>
            </div>

            <div class="form-group mb-4">
                <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                <input type="password" name="_password" id="password" class="mt-1 block w-full px-4 py-2 border rounded-lg bg-white text-gray-800 shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# Uncomment this section if you want a remember me functionality #}
            {#
            <div class="form-check mb-4">
                <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                <label for="_remember_me" class="form-check-label">Remember me</label>
            </div>
            #}

            <button class="w-full py-3 bg-orange-500 text-white rounded-lg font-semibold text-lg hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-opacity-50" type="submit">Connexion</button>
        </form>

        {% if app.user %}
            <div class="alert alert-info mt-4 text-center">
                You are logged in as {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}" class="text-orange-500">Logout</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
